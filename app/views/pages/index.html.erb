<% if true %>
<div class="news">
    <table>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td class="text-left"><%= event.formatted_content %></td>
            <td><%= event.created_at.strftime("%Y-%m-%d") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
<% end %>

<% if false %>
<div class="container">
<h1 class="text-center">Here are the main current news</h1>
<h3 class="text-center">(fetched from Wikipedia)</h3></br></br>
  <div class="row">
      <div class="news">
          <ul class="list-unstyled">
            <% @events.each do |event| %>
              <li>
                <span class="pull-left"><%= event.formatted_content %></span>
                <span class="pull-right">(created on <%= event.created_at.strftime("%Y-%m-%d") %>)</span>
              </li>
            <% end %>
          </ul>
      </div>
  </div>
</div>
<% end %>
